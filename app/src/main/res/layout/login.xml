<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/cooing"
        android:contentDescription="허전해서 그럴싸하게 넣어봄"/>

    <TextView
        android:text="cooing에 오신것을 환영합니다!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="65dp"
        android:textStyle="italic|bold"
        android:textAlignment="center"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/id_text"
        android:hint="id를 입력하여주세요."
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="16dp"
        android:textSize="25sp"
        android:textColorHint="#A9ADB4"
        android:textCursorDrawable="@null"/>
    <EditText
        android:id="@+id/pw_text"
        android:hint="비밀번호를 입력하여주세요."
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="16dp"
        android:textSize="25sp"
        android:textColorHint="#A9ADB4"
        android:textCursorDrawable="@null"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/login_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginEnd="100dp"
            android:textStyle="bold"
            android:text="로그인" />

        <Button
            android:id="@+id/sign_up_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="cooing이 처음이신가요?" />
    </LinearLayout>

</LinearLayout>